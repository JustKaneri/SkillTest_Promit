@using SkillTest_Promit.Dto;
@model FeedbackDto

<div>
    <h2>Оставить отзыв</h2>
    @if (!ViewContext.ViewData.ModelState.IsValid)
    {
        <h2 class="text-danger">Не удалось оставить отзыв</h2>
    }
    <form asp-controller="FeedbackCreator" method="post">
        <div class="form-group">
            <label for="user-name">Имя пользователя</label>
            <span asp-validation-for="Name" class="text-danger"></span>
            <input type="text" asp-for="Name" maxlength="50" class="form-control" id="user-name" placeholder="name">
        </div>
        <div class="form-group">
            <label for="orgnization-name">Название организации</label>
            <span asp-validation-for="NameOrganization" class="text-danger"></span>
            <input type="text" asp-for="NameOrganization" maxlength="100" class="form-control" id="orgnization-name" placeholder="name">
        </div>
        <div class="form-group">
            <label for="orgnization-adress">Адрес организации</label>
            <span asp-validation-for="Address" class="text-danger"></span>
            <input type="text" asp-for="Address" maxlength="255" class="form-control" id="orgnization-adress" placeholder="adress">
        </div>
        <div class="form-group">
            <label for="positive">Что понравилось</label>
            <span asp-validation-for="Posivite" class="text-danger"></span>
            <textarea class="form-control" asp-for="Posivite" maxlength="1000" id="positive" rows="3"></textarea>
        </div>
        <div class="form-group">
            <label for="negative">Что не понравилось</label>
            <span asp-validation-for="Negative" class="text-danger"></span>
            <textarea class="form-control" asp-for="Negative" maxlength="1000" id="negative" rows="3"></textarea>
        </div>
        <div class="form-group">
            <label for="comment">Комментарии</label>
            <span asp-validation-for="Comment" class="text-danger"></span>
            <textarea class="form-control" asp-for="Comment" maxlength="1000" id="comment" rows="3"></textarea>
        </div>
        <div class="form-group">
            <label for="mark">Укажите оценку</label>
            <span asp-validation-for="Mark" class="text-danger"></span>
            <select class="form-control" asp-for="Mark" id="mark">
                <option>1</option>
                <option>2</option>
                <option>3</option>
                <option>4</option>
                <option>5</option>
            </select>
        </div>
        <button type="submit" style="width:100%; margin-top:10px" class="btn btn-outline-primary">Создать</button>
        @section Scripts{
            @{
                <partial name="_ValidationScriptsPartial" />
            }
        }
    </form>
</div>